<div id="<%= (firstCurrency) ? 'first' : 'second' %>-select" class="hide popover">
  <div class="popover-content scrollable">
    <div class="arrow"><span></span></div>
      <div class="popover-body">
        <ul>
          <% for (var i in currencies) { %>
            <% if ((i !== getCurrencies()[0]) &&
                   (i !== getCurrencies()[1])) { %>
              <li data-currency="<%= i %>" class="flag <%= i %>-flag">
                <a href="#<%= (firstCurrency) ? i + ',' + getCurrencies()[1] : getCurrencies()[0] + ',' + i %>"><%= currencies[i].name %></a>
              </li>
            <% } %>
          <% } %>
        </ul>
    </div>
  </div>
</div>
